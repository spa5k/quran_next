{
  "name": "electron",
  "version": "0.0.1",
  "author": {
    "name": "spa5k",
    "email": "admin@saybackend.com",
    "url": "https://saybackend.com"
  },
  "homepage": "https://saybackend.com",
  "main": "./build/main.js",
  "scripts": {
    "dist": "electron-builder --dir",
    "linux": "electron-builder --linux deb",
    "win": "electron-builder --win",
    "mac": "electron-builder --mac",
    "postinstall": "electron-builder install-app-deps",
    "start": "NODE_ENV=development electron .",
    "build": "tsup",
    "build:dev": "tsup --watch",
    "dev": "npm-run-all --parallel build:dev electron:dev",
    "electron:dev": "cross-env NODE_ENV='development' nodemon",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.4.0",
    "@hono/zod-openapi": "^0.14.8",
    "@next/env": "^14.2.5",
    "better-sqlite3": "^11.1.2",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.32.0",
    "electron-dl-manager": "^3.0.0",
    "electron-log": "^5.1.5",
    "electron-settings": "^4.0.4",
    "get-port-please": "^3.1.2",
    "hono": "^4.4.12",
    "mkdirp": "^3.0.1",
    "next": "^14.2.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.14.10",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prebuild-install": "^7.1.2",
    "tsup": "^8.1.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "asar": true,
    "executableName": "Quran",
    "asarUnpack": "**\\*.{node,dll}",
    "appId": "com.saybackend.quran",
    "files": [
      "build"
    ],
    "extraFiles": [
      {
        "from": "../web/.next/standalone/web",
        "to": "web"
      },
      {
        "from": "../web/.next/static",
        "to": "web/.next/static"
      },
      {
        "from": "../web/public",
        "to": "web/public"
      }
    ]
  }
}
