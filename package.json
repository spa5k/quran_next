{
  "name": "quran",
  "version": "0.1.0",
  "private": true,
  "description": "Electron app for Quran",
  "homepage": "https://quran.com",
  "author": {
    "name": "Quran.com",
    "email": "abcd@gmail.com"
  },
  "main": "build/main.js",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "format": "dprint fmt",
    "postinstall": "electron-builder install-app-deps",
    "electron:dist": "electron-builder --dir",
    "electron:dist:deb": "electron-builder --linux deb",
    "electron:build": "tsup",
    "build": "run-s next:build electron:build",
    "dist": "run-s next:build electron:dist",
    "dev": "npm-run-all --parallel electron:dev next:dev",
    "electron:build_watch": "tsup --watch",
    "electron:dev": "npm-run-all --parallel electron:build_watch electron:watch",
    "electron:watch": "cross-env NODE_ENV='development' nodemon"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@hono/node-server": "^1.12.0",
    "@hono/swagger-ui": "^0.4.0",
    "@hono/zod-openapi": "^0.15.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-toggle-group": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@tanstack/react-query": "^5.51.11",
    "@uidotdev/usehooks": "^2.4.1",
    "adhan": "^4.4.3",
    "better-sqlite3": "^11.1.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "cobe": "^0.6.3",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.12",
    "drizzle-orm": "^0.32.1",
    "electron-dl-manager": "^3.1.0",
    "electron-log": "^5.1.7",
    "electron-settings": "^4.0.4",
    "framer-motion": "^11.3.17",
    "get-port-please": "^3.1.2",
    "hono": "^4.5.1",
    "howler": "^2.2.4",
    "lucide-react": "^0.414.0",
    "mini-svg-data-uri": "^1.4.4",
    "next": "14.2.4",
    "next-themes": "^0.3.0",
    "node-cache": "^5.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-spring": "^9.7.4",
    "react-use-audio-player": "^2.2.0",
    "tailwind-merge": "^2.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^0.9.1",
    "virtua": "^0.33.3",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.2.5",
    "@types/better-sqlite3": "^7.6.11",
    "@types/eslint": "^8.56.11",
    "@types/howler": "^2.2.11",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "dprint": "^0.47.2",
    "drizzle-kit": "^0.23.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.5.7",
    "eslint-config-next": "14.2.3",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.40",
    "prebuild-install": "^7.1.2",
    "tailwindcss": "^3.4.6",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.6.0",
  "build": {
    "asar": true,
    "executableName": "Quran",
    "appId": "com.saybackend.quran",
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/sharp",
      "**\\*.{node,dll}"
    ],
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    }
  }
}
