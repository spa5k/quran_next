{
  "name": "@quran/electron",
  "version": "0.0.1",
  "description": "Electron app for Quran",
  "homepage": "https://quran.com",
  "author": {
    "name": "Quran.com",
    "email": "abcd@gmail.com"
  },
  "main": "main/main.js",
  "scripts": {
    "dist": "electron-builder --dir",
    "dist:deb": "electron-builder --linux deb",
    "start": "NODE_ENV=development electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "tsup",
    "build:dev": "tsup --watch",
    "dev": "npm-run-all --parallel build:dev electron:dev",
    "electron:dev": "cross-env NODE_ENV='development' nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:tsc": "tsc"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@hono/node-server": "^1.11.2",
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.14.1",
    "better-sqlite3": "^11.0.0",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.31.0",
    "electron-dl-manager": "^3.0.0",
    "electron-log": "^5.1.5",
    "electron-settings": "^4.0.4",
    "get-port-please": "^3.1.2",
    "hono": "^4.4.2",
    "next": "^14.2.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.10",
    "drizzle-kit": "^0.22.1",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.2",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.0.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "asar": true,
    "executableName": "Quran",
    "files": [
      "main"
    ],
    "productName": "Quran",
    "extraFiles": [
      {
        "from": "../web/.next/standalone/apps/web",
        "to": "web"
      },
      {
        "from": "../web/.next/static",
        "to": "web/.next/static"
      },
      {
        "from": "../web/public",
        "to": "web/public"
      }
    ]
  }
}
