{
  "name": "@quran/electron",
  "version": "0.0.1",
  "main": "main/src/main.js",
  "type": "module",
  "author": {
    "name": "Quran.com",
    "email": "abcd@gmail.com"
  },
  "homepage": "https://quran.com",
  "scripts": {
    "dist": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "start": "NODE_ENV=development electron .",
    "build": "swc ./src -d main",
    "build:dev": "swc ./src -d main --watch",
    "dev": "npm-run-all --parallel build:dev electron:dev",
    "electron:dev": "cross-env NODE_ENV='development' nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@hono/node-server": "^1.11.1",
    "@libsql/client": "^0.6.0",
    "@types/better-sqlite3": "^7.6.10",
    "better-sqlite3": "^10.0.0",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.30.10",
    "electron-dl": "^4.0.0",
    "electron-store": "^9.0.0",
    "get-port-please": "^3.1.2",
    "hono": "^4.3.7",
    "next": "^14.2.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.7",
    "drizzle-kit": "^0.21.2",
    "electron": "^30.0.6",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "asar": true,
    "executableName": "YourAppName",
    "files": [
      "main"
    ],
    "extraFiles": [
      {
        "from": "../web/.next/standalone/apps/web",
        "to": "web"
      },
      {
        "from": "../web/.next/static",
        "to": "web/.next/static"
      },
      {
        "from": "../web/public",
        "to": "web/public"
      }
    ]
  }
}
